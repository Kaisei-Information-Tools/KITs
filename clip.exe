.settings-btn {
  background: none;
  border: none;
  color: white;
  font-size: 1.5rem;
  cursor: pointer;
  margin-left: auto;
}

/* „É°„Ç§„É≥„É¨„Ç§„Ç¢„Ç¶„Éà */
.main {
  display: flex;
  background: transparent;
  min-height: 100vh;
  padding-top: 60px;
  margin-top: 0;
}

/* „Ç≥„É≥„ÉÜ„É≥„ÉÑ */
.content {
  flex: 1;
  display: flex;
  gap: 30px;
  padding: 20px;
  transition: all 0.3s ease;
  align-items: flex-start;
  overflow-x: visible;
}

/* Content takes full width since sidebar is hidden by default */
.content {
  margin-left: 0;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
  flex-grow: 1;
  min-width: 0;
  transition: all 0.3s ease;
}

/* „Çø„Ç§„É´ */
.square {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  padding: 15px;
  box-shadow: 0 4px 20px var(--glass-shadow);
  transition: all 0.3s ease;
}

.square:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px var(--glass-shadow);
  background: var(--glass-bg-hover);
}

.square a {
  color: inherit;
  text-decoration: none;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.square img {
  width: 100%;
  max-width: 300px;
  min-width: 120px;
  height: auto;
  border-radius: 12px;
  object-fit: contain;
  margin: 0 auto;
}

/* „ÉÜ„Ç≠„Çπ„Éà */
.text-parts {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px 5px 0 5px;
}

.text-parts h4 {
  font-size: 1.4rem;
  font-weight: 600;
  margin: 5px 0;
  color: var(--text-primary);
}

.text-parts p {
  font-size: 1rem;
  color: var(--text-secondary);
  margin: 0;
}

/* ÊôÇË®à„ÉªToDo „Éú„ÉÉ„ÇØ„Çπ */
.side-content {
  display: flex;
  flex-direction: column;
  gap: 30px;
  flex-shrink: 0;
  max-width: 100%;
  transition: all 0.3s ease;
}

.clock,
.todo-list {
  display: block;
  width: auto;
  max-width: 100%;
  overflow: hidden;
  border-radius: 20px;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

/* ÊôÇË®à */
.clock {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  color: var(--text-primary);
  border-radius: 16px;
  font-size: 4rem; /* „É°„Ç§„É≥ÊôÇÂàª */
  font-weight: 600;
  padding: 40px;
  text-align: center;
  line-height: 1.2;
  white-space: pre-line;
  overflow: hidden;
  box-shadow: 0 4px 20px var(--glass-shadow);
  transition: all 0.3s ease;
  --clock-date-font: 2rem; /* ‚Üê ÂàùÊúüÂÄ§„ÇíCSSÂ§âÊï∞„ÅßÂÆöÁæ© */
}

.clock::first-line {
  font-size: var(--clock-date-font);
}

/* ToDo */
.todo-list {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  color: var(--text-primary);
  padding: 30px;
  font-size: 1.2rem;
  box-shadow: 0 4px 20px var(--glass-shadow);
}

/* Ë®≠ÂÆö„Éë„Éç„É´ */
.settings-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
}

.settings-overlay.hidden {
  display: none;
}

.settings-panel {
  background: var(--glass-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  padding: 30px;
  box-shadow: 0 4px 20px var(--glass-shadow);
  width: 320px;
  max-width: 90%;
  position: relative;
  animation: fadeIn 0.3s ease-out;
  color: var(--text-primary);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.settings-panel h2 {
  margin-top: 0;
  font-size: 1.3rem;
  color: var(--text-primary);
  margin-bottom: 15px;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 1.5rem;
  background: none;
  border: none;
  cursor: pointer;
  color: var(--text-secondary);
}

input[type="range"] {
  width: 100%;
}

/* „Éï„ÉÉ„Çø„Éº */
footer {
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1px solid var(--glass-border);
  color: var(--text-secondary);
  text-align: center;
  padding: 10px 0;
  font-size: 0.9rem;
}

/* „Éà„ÉÉ„Éó„Å∏Êàª„Çã„Éú„Çø„É≥ */
#to-top {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 45px;
  height: 45px;
  background: var(--glass-bg);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--glass-border);
  color: var(--text-primary);
  font-size: 1.5rem;
  border-radius: 50%;
  box-shadow: 0 8px 24px var(--glass-shadow);
  cursor: pointer;
  z-index: 999;
  display: none;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

#to-top:hover {
  background: var(--glass-bg-hover);
  box-shadow: 0 12px 32px var(--glass-shadow);
  transform: translateY(-2px);
}

/* --- „É¨„Çπ„Éù„É≥„Ç∑„ÉñÂØæÂøú --- */
@media (max-width: 1400px) and (min-width: 1201px) {
  .grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
@media (max-width: 1200px) and (min-width: 800px) {
  .content {
    flex-direction: column;
  }

  .side-content {
    order: -1;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  .clock,
  .todo-list {
    display: block;
    min-width: 300px;
    flex: 1;
  }
}
@media (max-width: 1300px) and (min-width: 1200px) {
  .content.fullwidth .grid {
    grid-template-columns: repeat(4, 1fr) !important;
  }
}

@media (max-width: 1000px) and (min-width: 801px) {
  .grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
@media (max-width: 800px) and (min-width: 601px) {
  .grid,
  .content.fullwidth .grid {
    grid-template-columns: repeat(3, 1fr) !important;
  }
}
@media (max-width: 600px) {
  .grid,
  .content.fullwidth .grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
}

/* --- „Çπ„Éû„ÉõÂêë„ÅëÔºà800px‰ª•‰∏ãÔºâ --- */
@media (max-width: 800px) {
  .content {
    margin-left: 0 !important;
    padding: 5px;
  }
  .clock,
  .todo-list,
  .side-content {
    display: none;
  }
  .grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    width: 90%;
    margin: 0 auto;
  }
}

/* ========= „É≠„Éº„ÉÄ„ÉºÂÖ®‰Ωì ========== */

/* „É≠„Éº„ÉÄ„ÉºÂÖ®‰Ωì */
#loader {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(
    135deg,
    var(--bg-gradient-start) 0%,
    var(--bg-gradient-end) 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease;
}

#loader.hide {
  opacity: 0;
  pointer-events: none;
}

#loader-inner {
  text-align: center;
  color: var(--text-primary);
}

/* ÂÜÜÂΩ¢„É™„É≥„Ç∞ */
.progress-ring {
  position: relative;
  width: 120px;
  height: 120px;
  margin: 0 auto;
}

.progress-ring svg {
  transform: rotate(-90deg);
  width: 100%;
  height: 100%;
}

.progress-ring circle {
  fill: none;
  stroke-width: 12;
  stroke-linecap: round;
}

.progress-ring .bg {
  stroke: rgba(60, 60, 108, 0.2);
}

.progress-ring .fg {
